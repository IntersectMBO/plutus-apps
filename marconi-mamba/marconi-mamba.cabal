cabal-version: 3.0
name:          marconi-mamba
version:       1.1.0.0
license:       Apache-2.0
license-files:
  LICENSE
  NOTICE

author:        Markus LÃ¤ll
maintainer:    markus.lall@iohk.io
homepage:      https://github.com/input-output-hk/plutus-apps#readme
bug-reports:   https://github.com/input-output-hk/plutus-apps/issues
description:
  Please see the README on GitHub at <https://github.com/input-output-hk/plutus-apps#readme>

build-type:    Simple

source-repository head
  type:     git
  location: https://github.com/input-output-hk/plutus-apps

common lang
  default-language:   Haskell2010
  default-extensions:
    DeriveFoldable
    DeriveFunctor
    DeriveGeneric
    DeriveLift
    DeriveTraversable
    ExplicitForAll
    GeneralizedNewtypeDeriving
    ImportQualifiedPost
    OverloadedStrings
    ScopedTypeVariables
    StandaloneDeriving

  ghc-options:
    -Wall -Widentities -Wincomplete-record-updates
    -Wincomplete-uni-patterns -Wmissing-import-lists
    -Wnoncanonical-monad-instances -Wredundant-constraints
    -Wunused-packages

library json-rpc
  import:          lang
  hs-source-dirs:  json-rpc/src
  exposed-modules:
    Marconi.Client.Types
    Marconi.JsonRpc.Types
    Marconi.Server.Types

  ------------------------
  -- Non-IOG dependencies
  ------------------------
  build-depends:
    , aeson
    , base                 >=4.9 && <5
    , containers
    , http-media
    , servant
    , servant-client-core
    , servant-server
    , text

library
  import:          lang
  hs-source-dirs:  src
  exposed-modules:
    Marconi.Api.HttpServer
    Marconi.Api.Routes
    Marconi.Api.Types
    Marconi.Api.UtxoIndexersQuery
    Marconi.Bootstrap
    Marconi.MambaCli

  --------------------
  -- Local components
  --------------------
  build-depends:
    , cardano-streaming
    , json-rpc
    , marconi
    , rewindable-index

  --------------------------
  -- Other IOG dependencies
  --------------------------
  build-depends:
    , cardano-api
    , iohk-monitoring

  ------------------------
  -- Non-IOG dependencies
  ------------------------
  build-depends:
    , aeson
    , async
    , base                  >=4.9 && <5
    , lens
    , optparse-applicative
    , prettyprinter
    , servant
    , servant-server
    , stm                   >=2.5
    , text
    , time
    , warp

executable marconi-mamba
  import:         lang
  hs-source-dirs: app
  main-is:        Main.hs

  --------------------
  -- Local components
  --------------------
  build-depends:  marconi-mamba

  ------------------------
  -- Non-IOG dependencies
  ------------------------
  build-depends:
    , async
    , base   >=4.9 && <5

executable examples-json-rpc-server
  import:         lang
  hs-source-dirs: examples/json-rpc-server/src
  main-is:        Main.hs

  --------------------
  -- Local components
  --------------------
  build-depends:
    , marconi
    , marconi-mamba

  ------------------------
  -- Non-IOG dependencies
  ------------------------
  build-depends:
    , async
    , base                  >=4.9 && <5
    , lens
    , optparse-applicative
    , stm

executable examples-json-rpc-client
  import:         lang
  hs-source-dirs: examples/json-rpc-client/src
  main-is:        Main.hs

  --------------------
  -- Local components
  --------------------
  build-depends:
    , json-rpc
    , marconi

  ------------------------
  -- Non-IOG dependencies
  ------------------------
  build-depends:
    , base            >=4.9 && <5
    , http-client
    , servant
    , servant-client

library db-utils
  import:          lang
  hs-source-dirs:  db-utils/src
  exposed-modules: Marconi.DB.SqlUtils

  --------------------------
  -- Other IOG dependencies
  --------------------------
  build-depends:   cardano-api

  ------------------------
  -- Non-IOG dependencies
  ------------------------
  build-depends:
    , async
    , base            >=4.9 && <5
    , raw-strings-qq
    , sqlite-simple
    , text
    , time

executable db-utils-exe
  import:         lang
  hs-source-dirs: db-utils/exe
  main-is:        Main.hs

  --------------------
  -- Local components
  --------------------
  build-depends:  db-utils

  ------------------------
  -- Non-IOG dependencies
  ------------------------
  build-depends:
    , base                  >=4.9 && <5
    , optparse-applicative

test-suite marconi-mamba-test
  import:         lang
  ghc-options:    -Wno-unused-packages
  type:           exitcode-stdio-1.0
  main-is:        Spec.hs
  hs-source-dirs: test
  other-modules:  Spec.UtxoIndexersQuery

  --------------------
  -- Local components
  --------------------
  build-depends:
    , marconi
    , marconi-mamba
    , rewindable-index

  ------------------------
  -- Non-IOG dependencies
  ------------------------
  build-depends:
    , base                            >=4.9 && <5
    , cardano-api:{cardano-api, gen}
    , containers
    , hedgehog
    , lens
    , stm
    , tasty
    , tasty-hedgehog
    , text
