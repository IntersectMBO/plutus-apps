                 -- See Plutus Tx readme
                 -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas
    hs-source-dirs: test
    other-modules:
        Spec.Balancing
        Spec.Contract
        Spec.ErrorChecking
        Spec.Emulator
        Spec.Rows
        Spec.State
        Spec.ThreadToken
        Spec.TimeValidity
        Spec.Secrets
        Spec.Plutus.Contract.Wallet
        Spec.Plutus.Contract.Oracle
    build-depends:
        aeson -any,
        base >=4.9 && <5,
        bytestring -any,
        cardano-api -any,
        cardano-api:gen -any,
        containers -any,
        data-default -any,
        extensible-effects -any,
        freer-extras -any,
        freer-simple -any,
        hedgehog -any,
        lens -any,
        mtl -any,
        plutus-chain-index-core -any,
        plutus-contract -any,
        plutus-ledger -any,
        plutus-ledger-api -any,
        plutus-ledger-constraints -any,
        plutus-script-utils -any,
        plutus-tx -any,
        QuickCheck -any,
        row-types -any,
        semigroupoids -any,
        tasty -any,
        tasty-golden -any,
        tasty-hedgehog -any,
        tasty-hunit -any,
        tasty-quickcheck -any,
        text -any,
        transformers -any

    if !(impl(ghcjs) || os(ghcjs))
        build-depends: plutus-tx-plugin -any
